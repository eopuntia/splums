/* style.qss */

/* Global (affects all aspects of GUI unless something below overrides it) */
QWidget {
    font-family: Roboto;
    color: #000000;
}


/* Main Background Color */
QWidget#Main, QInputDialog {
    background-color: #ababab;
}

/* Button Color */
QToolButton {
    border: 2px solid #434343;
    background-color: #f6f6f6;
}
QPushButton {
    border: 2px solid #434343;
    font-size:15pt;
    background-color: #CCCCCC;
}

/* Headcount Header */
QLabel#HeadcountHeader {
    background-color: #f6f6f6;
}

/* Headcount */
QLCDNumber {
    background-color: #e0e0e0;
}


/* Student Table Header */
QHeaderView {
    font-size: 12pt;
    background-color: #f6f6f6;
}

/* Student Table */
QTableWidget {
    font-size: 18pt;
    border: 2px solid #434343;
    background-color: #e0e0e0;
}

QPlainTextEdit {
    border: 2px solid #434343;
}

QLineEdit, QComboBox, QListWidget {
    background-color: #e0e0e0;
}

QGroupBox {
    border: 2px solid #434343;
}
